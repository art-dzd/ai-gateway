# App
APP_ENV=local
LOG_LEVEL=INFO

# Storage
DATABASE_URL=postgresql+psycopg://gateway:gateway@postgres:5432/gateway
REDIS_URL=redis://redis:6379/0

# Auth (client API keys)
# In MVP these will be created/stored in DB. This is here only as a placeholder.

# Providers (OpenAI-compatible)
DEFAULT_PROVIDER=mock

# Example: OpenRouter / Cloud.ru / any OpenAI-compatible endpoint
# OPENAI_BASE_URL=https://api.openai.com
# OPENAI_API_KEY=...
# OPENAI_HTTP_REFERER=https://example.com
# OPENAI_TITLE=AI Gateway
# OPENAI_TIMEOUT_SECONDS=30
# OPENAI_RETRIES=2

# Dashboard (Basic Auth)
DASHBOARD_LOGIN=admin
DASHBOARD_PASSWORD=admin

# Limits / cache
DEFAULT_RPM_LIMIT=60
MODELS_CACHE_TTL_SECONDS=3600

# Celery (defaults to REDIS_URL if not set)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=10

# Optional: expose Prometheus metrics from worker on separate port
# WORKER_METRICS_PORT=9000
